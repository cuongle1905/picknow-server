@page
@model PickNowWeb.Pages.DistrictsModel

@(Html.DevExtreme().DataGrid<PickNowWeb.Models.District>()
    .DataSource(ds => ds.Mvc()
        .Controller("Districts")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Province).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Districts").LoadAction("ProvincesLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.Code);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)