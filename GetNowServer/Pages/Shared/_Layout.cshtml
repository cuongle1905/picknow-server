<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Get Now</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://unpkg.com/devextreme-quill/dist/dx-quill.min.js"></script> *@

    <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <script src="~/js/vendor.js" asp-append-version="true"></script>
    <script src="~/js/common.js"></script>
</head>


<body style="padding-top: 5rem;">

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <a class="navbar-brand" href="/">Get Now</a>

        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar" class="collapse navbar-collapse">
            <ul id="navbar1" class="navbar-nav mr-auto">
                <li id="ni-home" class="active nav-item"><a href="Index" class="nav-link">Home</a></li>
                <li id="ni-companies" class="nav-item"><a href="Companies" class="nav-link">Companies</a></li>
                <li id="ni-storegroups" class="nav-item"><a href="StoreGroups" class="nav-link">Store Groups</a></li>
                <li id="ni-stores" class="nav-item"><a href="Stores" class="nav-link">Stores</a></li>
                <li id="ni-storegproductroups" class="nav-item"><a href="StoreProducts" class="nav-link">Store Products</a></li>
                <li id="ni-contact" class="nav-item"><a href="Contact" class="nav-link">Contact</a></li>
            </ul>
        </div>
        <script>
            selectedMenuItemId = "#ni-stores"
        </script>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
    <script>
        $(".nav-item").removeClass("active")
        $("#navbar1").find(selectedMenuItemId).addClass("active")
    </script>
</body>

</html>