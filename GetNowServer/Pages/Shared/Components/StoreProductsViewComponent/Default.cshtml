@*@model (string greeting, string name)*@

<div class="store-products-component">
    <p class="h4">Hello <strong>world</strong></p>
    <p>Welcome to the ASP.NET Core course!</p>
</div>

@(Html.DevExtreme().DataGrid<GetNowServer.Models.Product>()
    .DataSource(ds => ds.Mvc()
        .Controller("Products")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Unit).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Products").LoadAction("UnitsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.Code);

        columns.AddFor(m => m.Brand).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Products").LoadAction("BrandsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.Origin).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Products").LoadAction("OriginsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.Size).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Products").LoadAction("SizesLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.Color).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Products").LoadAction("ColorsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.Description);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)