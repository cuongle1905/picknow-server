@page
@model GetNowServer.Pages.ImageInfoModel
@{
}
@(Html.DevExtreme().DataGrid<GetNowServer.Models.ImageInfo>()
    .DataSource(ds => ds.Mvc()
        .Controller("ImageInfo")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.FileName);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)